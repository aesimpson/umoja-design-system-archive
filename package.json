{
  "name": "umoja",
  "version": "0.0.1",
  "description": "Sama's web component design system. Following open-wc recommendations",
  "author": "Amy Simpson <asimpson@samasource.org>",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "keywords": [],
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "web-dev-server"
  },
  "dependencies": {
    "lit-html": "^1.4.1",
    "lit-element": "^2.5.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "@open-wc/eslint-config": "^4.3.0",
    "prettier": "^2.2.1",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "@web/test-runner": "^0.12.20",
    "@open-wc/testing": "^2.5.33",
    "@web/dev-server-storybook": "^0.3.7",
    "@open-wc/building-rollup": "^1.10.0",
    "deepmerge": "^4.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.0",
    "@web/dev-server": "^0.1.20"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aesimpson/umoja-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/aesimpson/umoja-design-system/issues"
  },
  "homepage": "https://github.com/aesimpson/umoja-design-system#readme"
}
